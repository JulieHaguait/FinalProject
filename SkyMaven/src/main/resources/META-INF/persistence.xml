<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

<!-- config jpa -->

<!-- unite de persistance -->
	<persistence-unit name="sky" transaction-type="RESOURCE_LOCAL">
		<!-- implementation de JPA -->
		<provider>
			org.hibernate.jpa.HibernatePersistenceProvider
		</provider>
		<!-- la suite de la config est propre Ã  hibernate -->
		<properties>
			<!-- driver jdbc -->
			<property name="hibernate.connection.drive" value="org.postgresql.Driver"/>
			<!-- url base localhost = 127.0.0.1-->
			<property name="hibernate.connection.url" value="jdbc:postgresql://127.0.0.1:5432/sky"/>
			<property name="hibernate.connection.user" value="postgres"/>
			<property name="hibernate.connection.password" value="postgres"/>
			<!-- dialect hibernate -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL10Dialect"/>
			
			<!-- controle de la base  : validate, create, update,  ...-->
			<property name="hibernate.hbm2ddl.auto" value="create"/>
			
			<!-- le show sql a retirer en prod (ou la passer en false), c'est juste pour pouvoir travailler plus facilement -->
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
		</properties>
	</persistence-unit>
</persistence>